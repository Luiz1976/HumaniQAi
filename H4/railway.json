{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd server && npm install",
    "startCommand": "cd server && npm start",
    "installCommand": "cd server && npm install"
  },
  "deploy": {
    "startCommand": "cd server && npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "buildCommand": "cd server && npm install",
      "startCommand": "cd server && npm start"
    }
  }
}